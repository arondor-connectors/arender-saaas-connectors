<extension>
    <modules>
    
        <!--
            Customization module for adding i18n labels and importing client-side dependencies for
            the web previewer plugin
        -->
        <module>
            <id>Arender Preview Plugin</id>
            <customizations>
                <customization>
                    <targetPackageRoot>org.alfresco.components.preview</targetPackageRoot>              
                    <sourcePackageRoot>com.arondor.customization.arender-preview-plugin</sourcePackageRoot>
                </customization>
            </customizations>
            <auto-deploy>true</auto-deploy>
        </module>
        <!--
            Customization module which makes the plugin the default for PDF documents
        -->
        <module>
            <id>Arender Preview Plugin: Configuration</id>
            <customizations>
                <customization>
                    <targetPackageRoot>org.alfresco.components.preview</targetPackageRoot>              
                    <sourcePackageRoot>com.arondor.customization.arender-preview-plugin-config</sourcePackageRoot>
                </customization>
            </customizations>
            <auto-deploy>true</auto-deploy>
        </module>
        
    </modules>
</extension>
